<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Aeon MQ 7 -->
	<!--#############################################################################   VISTA WALL PANEL TV - ID 51   #############################################################################-->
	<include name="ViewWallPanelTV2">
		<!-- default group -->
		<control type="group">
			<left>50</left>
			<top>55</top>
			<description>Channels Wall</description>
			<visible>Control.IsVisible(50)</visible>
			<include>Animation_Fade</include>
		<control type="image">
				<description>background image</description>
				<width>1840</width>
				<height>1012</height>
				<texture border="40">scrolllabel_back.png</texture>
			</control>
			<control type="panel" id="50">
				<left>30</left>
				<top>30</top>
				<width>1800</width>
				<height>715</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="$LOCALIZE[31245]">icons</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="180" width="445">
					<control type="image">
						<width>440</width>
						<height>175</height>
						<aspectratio>stretch</aspectratio>
						<colordiffuse>33ffffff</colordiffuse>
						<texture border="4" background="true">genrespvr/128.png</texture>
						<visible>true</visible>
					</control>
					<control type="label">
						<left>14</left>
						<top>10</top>
						<width>320</width>
						<height>58</height>
						<font>Font_plotsmall</font>
						<textcolor>FFD0D0D0</textcolor>
						<selectedcolor>$INFO[Skin.String(colortexture)]</selectedcolor>
						<align>left</align>
						<label>[B]$INFO[ListItem.ChannelNumberLabel]  $INFO[ListItem.Label][/B]</label>
					</control>
					<control type="image">
						<left>335</left>
						<top>10</top>
						<width>90</width>
						<height>59</height>
						<aspectratio align="right">keep</aspectratio>
						<texture fallback="defaulttv.png">$INFO[ListItem.Icon]</texture>
						<colordiffuse>BAffffff</colordiffuse>
					</control>
					<control type="group">
						<left>15</left>
						<top>85</top>
						<width>440</width>
						<height>165</height>
						<visible>ListItem.HasEpg</visible>
						<control type="label">
							<left>0</left>
							<top>0</top>
							<width>400</width>
							<height>30</height>
							<font>Font_plotsmall</font>
							<textcolor>FFD0D0D0</textcolor>
							<selectedcolor>FFFFFFFF</selectedcolor>
							<align>left</align>
							<label>$INFO[ListItem.Title]</label>
						</control>
						<control type="progress">
							<left>0</left>
							<top>38</top>
							<width>408</width>
							<height>6</height>
							<info>ListItem.Progress</info>
							<visible>!String.IsEqual(ListItem.Title,)</visible>
							<midtexture colordiffuse="$INFO[Skin.String(colortexture)">progress_mid0.png</midtexture>
							<texturebg colordiffuse="FFD0D0D0">progress_back.png</texturebg>
						</control>
						<control type="label">
							<left>0</left>
							<top>48</top>
							<width>400</width>
							<height>30</height>
							<font>Font_plotsmall</font>
							<align>left</align>
							<textcolor>FFD0D0D0</textcolor>
							<selectedcolor>FFFFFFFF</selectedcolor>
							<label>$LOCALIZE[19031]: $INFO[ListItem.NextTitle]</label>
							<visible>true</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="180" width="445">
					<control type="group">
						<animation type="Focus">
							<effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
						</animation>
						<control type="image">
							<left>-68</left>
							<top>-30</top>
							<width>576</width>
							<height>235</height>
							<aspectratio>stretch</aspectratio>
							<texture border="4" background="true">scrolllabel_back.png</texture>
							<colordiffuse>$INFO[Skin.String(colortexture)]</colordiffuse>
						</control>
						<control type="image">
							<width>440</width>
							<height>175</height>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>60ffffff</colordiffuse>
							<texture border="4" background="true">genrespvr/128.png</texture>
							<visible>true</visible>
						</control>
						<control type="image">
							<left>335</left>
							<top>10</top>
							<width>90</width>
							<height>59</height>
							<aspectratio align="right">keep</aspectratio>
							<texture background="true" fallback="defaulttv.png">$INFO[ListItem.Icon]</texture>
							<fadetime>500</fadetime>
						</control>
						<control type="label">
							<left>14</left>
							<top>10</top>
							<width>320</width>
							<height>58</height>
							<font>Font_plot_big</font>
							<selectedcolor>FFFFFFFF</selectedcolor>
							<align>left</align>
							<label>[B]$INFO[ListItem.ChannelNumberLabel]  $INFO[ListItem.Label][/B]</label>
						</control>
						<control type="group">
							<left>15</left>
							<top>85</top>
							<width>440</width>
							<height>165</height>
							<visible>ListItem.HasEpg</visible>
							<control type="label">
								<left>0</left>
								<top>0</top>
								<width>400</width>
								<height>30</height>
								<font>Font_plot</font>
								<selectedcolor>FFFFFFFF</selectedcolor>
								<align>left</align>
								<label>[B]$INFO[ListItem.Title][/B]</label>
							</control>
							<control type="progress">
								<left>0</left>
								<top>38</top>
								<width>408</width>
								<height>6</height>
								<info>ListItem.Progress</info>
								<visible>!String.IsEqual(ListItem.Title,)</visible>
								<midtexture colordiffuse="$INFO[Skin.String(colortexture)">progress_mid0.png</midtexture>
								<texturebg colordiffuse="FFD0D0D0">progress_back.png</texturebg>
							</control>
							<control type="label">
								<left>0</left>
								<top>48</top>
								<width>400</width>
								<height>30</height>
								<font>Font_plotsmall</font>
								<align>left</align>
								<textcolor>FFD0D0D0</textcolor>
								<selectedcolor>FFFFFFFF</selectedcolor>
								<label>$LOCALIZE[19031]: $INFO[ListItem.NextTitle]</label>
							</control>
						</control>
					</control>
				</focusedlayout>
			</control>

			<control type="scrollbar" id="60">
				<left>1810</left>
				<top>30</top>
				<width>30</width>
				<height>900</height>
				<onleft>50</onleft>
				<onleft>50</onleft>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground>scrollbar_v.png</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar_vbar.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar_vbar_focus.png</texturesliderbarfocus>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
			</control>
			<!-- Bottom info-panel -->
			<control type="group">
				<left>30</left>
				<top>750</top>
				<!-- Videopreview and logo -->
				<control type="group">
					<visible>!Player.HasVideo</visible>
					<left>122</left>
					<top>12</top>
					<control type="image">
						<width>200</width>
						<height>200</height>
						<aspectratio>keep</aspectratio>
						<fadetime>400</fadetime>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
				</control>
				<control type="group">
					<visible>Player.HasVideo</visible>
					<top>2</top>
					<control type="image">
						<width>445</width>
						<height>225</height>
						<aspectratio>stretch</aspectratio>
						<texture border="0">scrollbar_nib.png</texture>
					</control>
					<control type="videowindow">
						<width>445</width>
						<height>225</height>
					</control>
				</control>
				<!-- Discription and fanart -->
				<control type="group">
					<left>450</left>
					<top>0</top>
					<control type="label">
						<top>15</top>
						<width>1316</width>
						<height>30</height>
						<align>left</align>
						<font>Font_plot</font>
						<textcolor>FFD0D0D0</textcolor>
						<textoffsetx>15</textoffsetx>
						<label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,: ][COLOR FFFFFFFF][B]$INFO[ListItem.Title] [/B] |[/COLOR]  $INFO[ListItem.Genre,$LOCALIZE[515]: [COLOR FFD0D0D0],[/COLOR]]</label>
					</control>
					<control type="textbox" id="81">
						<label>$INFO[ListItem.Plot]</label>
						<left>15</left>
						<top>50</top>
						<width>1286</width>
						<height>180</height>
						<font>Font_plot</font>
						<pagecontrol>63</pagecontrol>
						<autoscroll time="3000" delay="4000" repeat="5000">!Skin.HasSetting(noallowscroll) + !Control.HasFocus(63)</autoscroll>
						<visible>![String.StartsWith(ListItem.PlotOutline,"http://") | String.StartsWith(ListItem.PlotOutline,"https://")]</visible>
					</control>
					<control type="textbox">
						<left>15</left>
						<top>50</top>
						<width>1000</width>
						<height>180</height>
						<font>Font_plot</font>
						<label>$INFO[ListItem.Plot]</label>
						<autoscroll time="3000" delay="4000" repeat="5000">!Skin.HasSetting(noallowscroll) + !Control.HasFocus(63)</autoscroll>
						<visible>String.StartsWith(ListItem.PlotOutline,"http://") | String.StartsWith(ListItem.PlotOutline,"https://")</visible>
					</control>
					<control type="image">
						<left>1020</left>
						<top>5</top>
						<width>300</width>
						<height>220</height>
						<align>center</align>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.PlotOutline]</texture>
						<visible>String.StartsWith(ListItem.PlotOutline,"http://") | String.StartsWith(ListItem.PlotOutline,"https://")</visible>
					</control>
					<control type="scrollbar" id="63">
						<left>1328</left>
						<top>124</top>
						<width>14</width>
						<height>110</height>
						<onup>PageUp(81)</onup>
						<ondown>PageUp(81)</ondown>
						<onleft>10</onleft>
						<onright>10</onright>
						<texturesliderbackground>scrollbar_v.png</texturesliderbackground>
						<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar_vbar.png</texturesliderbar>
						<texturesliderbarfocus border="1">scrollbar_vbar_focus.png</texturesliderbarfocus>
						<showonepage>false</showonepage>
						<orientation>vertical</orientation>
					</control>
				</control>
			</control>
		</control>		
	</include>
</includes>